<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('../../partials/head'); %>
	</head>
	<body>
		<header>
			<%- include('../../partials/header'); %>
		</header>

		<main>
			<section>
				<% if(user.name) { %><h4>Name: <%= user.name %></h4><% } %>
                <h4>Username: <%= user.username %></h2>
                <h4>Email address: <%= user.email %></h2>
				<% if(user.biography) { %><p>Biography: <%= user.biography %></p><% } %>
                <% if(user._id == authUser) { %>
                    <a href="/<%= user.username %>/edit">Edit profile</a>
                <% } %>
            </section>
		</main>

		<footer><%- include('../../partials/footer'); %></footer>

		<%- include('../../partials/scripts'); %>
	</body>
</html>
